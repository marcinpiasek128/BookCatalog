<p style="color: green"><%= notice %></p>

<p>
  <strong>Nazwa wydawnictwa:</strong>
  <%= @publisher.name %>
</p>

<table id="tabela-wyswietlanie">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Kategoria</th>
    <th>Autor</th>
  </tr>
  </thead>
  <tbody>
  <% @publisher.books.each do |b|%>
    <tr>
      <td><%= link_to b.name, b %></td>
      <td>
        <% b.categories.each do |g| %>
          <%= link_to g.name, category_path(g.id) %><br>
        <% end %>
      </td>       <td><%= link_to b.author.name, author_path(b.author.id) %></td>
      <td><%= link_to "Edytuj", edit_book_path(b) %></td>
      <td><%= button_to "Usuń", b, method: :delete, data:{confirm: 'Czy jesteś pewien?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
  <table>
    <tr>
      <td><%= link_to "Edytuj to wydawnictwo", edit_publisher_path(@publisher) %> |</td>
      <td><%= link_to "Powrót do listy wydawnictw", publishers_path %> |</td>
      <td><%= button_to "Usuń to wydawnictwo", @publisher, method: :delete, data:{confirm: 'Czy jesteś pewien?'} %></td>
    </tr>
  </table>
</div>
